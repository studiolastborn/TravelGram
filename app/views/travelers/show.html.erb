<%= render 'shared/page_title', title: @traveler.name + "'s Journeys" %>

<%= will_paginate @journeys %>

<div class="row">
<% @journeys.each do |journey| %>
    
  <div class="col-xs-6 col-md-4 thumbnails">
    <div class="index">
      <%= image_tag(journey.picture.url, size: "300x300") if journey.picture?%>
    
    <h3><%= link_to journey.title, journey_path(journey) %></h3>
    <p><%= journey.location %></p>
    <p><%= time_ago_in_words (journey.created_at) %> ago</p>
    <p><%= link_to 'Destroy', journey_path(journey), 
              method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
  </div>
 
<% end %>
</div> 
