<%= render 'shared/errors', obj:@journey %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for(@journey, html:{ multipart: true}) do |f| %>
    
    <%= f.label :title %>
    <%= f.text_field :title %>
    
    <%= f.label :location %>
    <%= f.text_field :location %>
    
    <%= f.label :description %>
    <%= f.text_area :description, rows:10 %>
    
    <span class="picture">
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png,image/jpg' %>
    </span>
    
    <%= f.submit(@journey.new_record? ? 'Post Journey':'Complete', class:"btn btn-success") %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#journey_picture').bind('change', function(){
    size_in_megabytes = this.file[0].size/1024/1024;
    if (size_in_megabytes > 5){
      alert("Maximum image size is 10MB. Please choose another one.");
    }
  })
</script>