<div class="container title">
<h1><%= @journey.title %></h1>
<h3>in <%= @journey.location %></h3>
</div>
<div class="container">

    <h4><%= @journey.description %></h4>
    <p>written by <%= @journey.traveler.name %></p>
    <p> updated <%= time_ago_in_words (@journey.updated_at) %> ago</p>
    <p> created <%= time_ago_in_words (@journey.created_at) %> ago</p>

    <p><%= link_to "Return to Journeys", journeys_path, class: "btn btn-small" %></p>
</div>
