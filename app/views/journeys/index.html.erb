<%= render 'shared/page_title', title: 'All journeys' %>

<div class="row">
<% @journeys.each do |journey| %>
    
  <div class="col-xs-6 col-md-4">
    <div class="indexPicture">
      <%= image_tag(journey.picture.url, size: "300*300") if journey.picture?%>
    </div>
    <h4><%= link_to journey.title, journey_path(journey) %></h4>
    <p><%= journey.location %></p>
    <p><%= time_ago_in_words (journey.created_at) %> ago</p>
  </div>
 
<% end %>
</div> 
